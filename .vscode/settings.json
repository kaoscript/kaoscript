{
	"explorer.fileNesting.patterns": {
		"*.ks": ".${capture}.ks.*",
	},
	"files.associations": {
		"compiler*.js": "text"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/*.ksb": true,
		"**/*.kse": true,
		"**/*.ksh": true,
		"**/*.ksr": true,
		"**/*.marks": true,
		"coverage": true,
	},
	"search.exclude": {
		"node_modules": true,
		"**/*.ksb": true,
		"**/*.kse": true,
		"**/*.ksh": true,
		"**/*.ksr": true,
		"**/*.marks": true,
		"lib/compiler*.js": true,
		"coverage": true,
	},
	"editor.defaultFoldingRangeProvider": "zokugun.explicit-folding",
}
