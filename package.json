{
	"name": "kaoscript",
	"description": "Programming language combining features from ES7, CoffeeScript, TypeScript, Rust, Swift, C# and more",
	"version": "0.9.0",
	"author": {
		"name": "Baptiste Augrain",
		"email": "daiyam@zokugun.org"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kaoscript/kaoscript"
	},
	"bugs": {
		"url": "https://github.com/kaoscript/kaoscript/issues"
	},
	"license": "MIT",
	"licenses": [
		{
			"type": "MIT",
			"url": "http://www.opensource.org/licenses/mit-license.php"
		}
	],
	"engines": {
		"node": ">= 4.0.0"
	},
	"files": [
		"register.js",
		"bin",
		"lib",
		"src"
	],
	"main": "lib/compiler.js",
	"bin": {
		"kaoscript": "./bin/kaoscript"
	},
	"dependencies": {
		"@kaoscript/ast": "kaoscript/ast#v0.7.0",
		"@kaoscript/parser": "kaoscript/parser#v0.8.0",
		"@kaoscript/runtime": "kaoscript/runtime#v0.6.0",
		"commander": "2.9.x"
	},
	"devDependencies": {
		"@kaoscript/coverage-istanbul": "kaoscript/coverage-istanbul#v0.2.0",
		"@kaoscript/test-import": "kaoscript/test-import#v0.2.0",
		"@zokugun/istanbul.cover": "0.5.x",
		"@zokugun/istanbul.cover.cmd.mocha": "0.4.x",
		"@zokugun/istanbul.reporter.minimap": "0.5.x",
		"chai": "2.x",
		"coveralls": "2.x",
		"istanbul": "^0.4",
		"mocha": "2.x",
		"rimraf": "2.5.x"
	},
	"scripts": {
		"push-coverage": "npm run test-coverage && cat ./coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
		"test": "mocha --colors --check-leaks --reporter spec --compilers ks:./register.js",
		"test-coverage": "node node_modules/@zokugun/istanbul.cover/src/cli.js"
	},
	"kaoscript": {
		"main": "src/compiler.ks"
	},
	"keywords": [
		"kaoscript",
		"es5",
